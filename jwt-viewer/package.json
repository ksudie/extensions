{
  "name": "jwt-viewer",
  "displayName": "jwt-viewer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jwtviewer.decode",
        "title": "Decode",
        "category": "JWTViewer",
        "icon": {
          "light": "resources/heart.svg",
          "dark": "resources/heart.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "jwtviewer.decode",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorHasSelection"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorHasSelection",
          "command": "jwtviewer.decode",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/jwt-decode": "^2.2.1",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.4"
  },
  "dependencies": {
    "jwt-decode": "^2.2.0"
  }
}
