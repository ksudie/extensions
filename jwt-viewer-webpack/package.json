{
  "name": "jwt-viewer",
  "displayName": "jwt-viewer",
  "publisher": "yokawasa",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "jwtviewer.decode",
        "title": "Decode",
        "category": "JWTViewer",
        "icon": {
          "light": "resources/heart.svg",
          "dark": "resources/heart.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "jwtviewer.decode",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorHasSelection"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorHasSelection",
          "command": "jwtviewer.decode",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/jwt-decode": "^2.2.1",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "jwt-decode": "^2.2.0"
  }
}
